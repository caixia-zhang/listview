<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="         事项:"
        android:textSize="24dp"
        android:id="@+id/text_view1"
        ></TextView>

    <EditText
        android:id="@+id/edit_text1"
        android:layout_width="200dp"
        android:layout_height="32dp"
        android:layout_toRightOf="@+id/text_view1"></EditText>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
         android:text="添加"
        android:id="@+id/btd1"
        ></Button>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_view2"
        android:layout_below="@+id/text_view1"
        android:text="         日期:"
        android:textSize="24dp"
        ></TextView>

    <EditText
        android:layout_width="200dp"
        android:layout_height="32dp"
        android:layout_below="@+id/edit_text1"
        android:layout_toRightOf="@+id/text_view1"
        android:id="@+id/edit_text2"


        ></EditText>


    <TextView
        android:id="@+id/text_view_date_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="截止日期: "
        android:textSize="24dp"
        android:layout_below="@+id/text_view2"
        ></TextView>
    <EditText
        android:layout_width="200dp"
        android:layout_height="32dp"
        android:layout_below="@+id/edit_text2"
        android:layout_toRightOf="@+id/text_view_date_del"
        android:id="@+id/edit_textdel_add"


        ></EditText>
    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/text_view_date_del"
        android:layout_marginTop="2dp"></ListView>

</RelativeLayout>